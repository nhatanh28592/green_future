<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>Green Future VN</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">	
<!-- Bootstrap style --> 
    <link href="css/chat.css" rel="stylesheet" media="screen"/>
	<link rel="stylesheet" media="screen" href="css/vendor.min.css">
    <link id="mainStyles" rel="stylesheet" media="screen" href="css/styles.min.css">
    <link rel="stylesheet" media="screen" href="css/customizer.min.css">
<!-- fav and touch icons -->
    <link rel="shortcut icon" href="img/logo.gif">
    <script src="js/jquery.min.js"></script>
    <script src="js/product_buy.js" type="text/javascript"></script>
    <script src="js/main.js" type="text/javascript"></script>
    <script src="js/modernizr.min.js"></script>
		
  </head>
<body>
<%- include wellcome.ejs %>
<div class="offcanvas-wrapper" style="background-color: #f5f5f5;">
<section class="container padding-top-1x" style="background-color:white;">
	<% if(language == "vi") { %>
		<h3 class="text-center mb-30">THÔNG TIN CHI TIẾT ĐƠN HÀNG</h3>
	<div class="row">
	<div class="col-md-6 card col-sm-6" style="">
	  <br>
	  <h4 style="color:#FF7F50">THÔNG TIN KHÁCH HÀNG:</h4>
	  <form id="buy_form" action="buy_now_next_step" method="POST" onsubmit="return validate_activity();" role="form">
	  	<table class="table table-bordered">
		    <thead>
		    </thead>
		    <tbody>
				<tr>
			     	<td><b>Email</b></td>
			    	<td><%=product_booking.info_personal.email%></td>
				</tr>
				<tr>
			     	<td><b>Tên</b></td>
			    	<td><%=product_booking.info_personal.name%></td>
				</tr>				
				<tr>
			     	<td><b>Số điện thoại</b></td>
			    	<td><%=product_booking.info_personal.mobile%></td>
				</tr>
				<tr>
			     	<td><b>Địa chỉ giao hàng</b></td>
			    	<td><%=product_booking.info_personal.address%></td>
				</tr>
				<tr>
			     	<td><b>Hình thức giao hàng</b></td>
			    	<td>
					    Giao hàng tận nơi (Thanh toán khi nhận hàng)
			    	</td>
				</tr>
		    </tbody>
		</table>
	  </form>
	</div>
  	<div class="col-md-6 card col-sm-6" style="">	
		<br>	
		<h4 style="color:#FF7F50">THÔNG TIN ĐƠN HÀNG:</h4>
			  <table class="table table-bordered">
			    <thead>
			      <tr style="background-color: aliceblue;">
			      	<th style="width:80px">Hình ảnh</th>
			        <th>Sản phẩm</th>
			        <th>Số lượng</th>
			      </tr>
			    </thead>
			    <tbody>
					<% product_booking.info_booking.forEach(function(product) { %>
					<% product.product_info.forEach(function(info) { %>
						<tr>
						    <td><img src="upload/<%= info.main_file %>" width="80px" height="80px"></td>
					     	<td><%= info.name %></td>
					    	<td><%= info.number %></td>
						</tr>
					<% }); %>
					<% }); %>
			    </tbody>
			  </table>
		</div>
	</div>
	<% } else { %>
		<h3 class="text-center mb-30">DETAIL ORDER</h3>
	<div class="row">
	<div class="col-md-6 card col-sm-6" style="">
	  <br>
	  <h4 style="color:#FF7F50">CUSTOMER INFORMATION:</h4>
	  <form id="buy_form" action="buy_now_next_step" method="POST" onsubmit="return validate_activity();" role="form">
	  	<table class="table table-bordered">
		    <thead>
		    </thead>
		    <tbody>
				<tr>
			     	<td><b>Email</b></td>
			    	<td><%=product_booking.info_personal.email%></td>
				</tr>
				<tr>
			     	<td><b>Name</b></td>
			    	<td><%=product_booking.info_personal.name%></td>
				</tr>				
				<tr>
			     	<td><b>Phone</b></td>
			    	<td><%=product_booking.info_personal.mobile%></td>
				</tr>
				<tr>
			     	<td><b>Address</b></td>
			    	<td><%=product_booking.info_personal.address%></td>
				</tr>
				<tr>
			     	<td><b>Option</b></td>
			    	<td>
					    Payment on delivery
			    	</td>
				</tr>
		    </tbody>
		</table>
	  </form>
	</div>
  	<div class="col-md-6 card col-sm-6" style="">	
		<br>	
		<h4 style="color:#FF7F50">ORDER INFORMATION:</h4>
			  <table class="table table-bordered">
			    <thead>
			      <tr style="background-color: aliceblue;">
			      	<th style="width:80px">Image</th>
			        <th>product/th>
			        <th>Number</th>
			      </tr>
			    </thead>
			    <tbody>
					<% product_booking.info_booking.forEach(function(product) { %>
					<% product.product_info.forEach(function(info) { %>
						<tr>
						    <td><img src="upload/<%= info.main_file %>" width="80px" height="80px"></td>
					     	<td><%= info.name %></td>
					    	<td><%= info.number %></td>
						</tr>
					<% }); %>
					<% }); %>
			    </tbody>
			  </table>
		</div>
	</div>
	<% } %>
	
</section>
<section class="container padding-top-3x">
	<h4 class="text-center mb-30" style="color:red">THANK YOU !</h4>
</section>
</div>
<%- include footer.ejs %>
<%- include modal_login.ejs %>
</body>
</html>